        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Employee.Surname)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @if (User.IsInRole("Director"))
            {
                if (!item.isApproved)
                {

                    using (Html.BeginForm("Potvrdi", "Absences", new { id = item.AbsenceId }))
                    {
                        <button type="submit" class="btn btn-primary">Потрвди</button>
                    }

                }
            }

        </td>

                <td>
                    @Html.ActionLink("Details  |", "Details", new { id = item.AbsenceId })
                    @if (!User.IsInRole("Employee"))
                    {
                        @Html.ActionLink("Edit  |", "Edit", new { id = item.AbsenceId })
                        @Html.ActionLink("Delete", "Delete", new { id = item.AbsenceId })
                    }

                </td>
            </tr>
}

</table>
